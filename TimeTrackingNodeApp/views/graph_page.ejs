<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title> Graph </title>
    <link rel="stylesheet" href="styles/graph_page.css">
    <link rel="stylesheet" href="styles/navigation_bar.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
      var currentProject = '<%- projectSelected %>';
      var currentGroup = '<%- projectCurrentGroup %>';
    </script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  </head>
  <body>

    <!--NAVIGATION BAR START-->
    <nav>
      <label class ="logo">Project</label>

      <!-- log out button -->
      <a onclick="return confirm('Are you sure you want to log out now?');" href = "/index">
        <label class = "log_out">
          <i class="fas fa-sign-out-alt"></i>
        </label>
      </a>

      <!-- home button -->
      <a href = "/lect_homepage"><input type = "button" id = "home">
        <label for = "home" class = "homebtn">
          <i class='fas fa-home'></i>
        </label></a>

      <!-- go back button -->
      <a href = "/select_group">
        <label for = "back" class = "backbtn">
          <i class="far fa-arrow-alt-circle-left"></i>
        </label></a>

      </nav>
      <!--NAVIGATION BAR END-->

      <!--PIE CHART START-->
      <div class = "row">
        <div class = "column">
          <div class = "graph">
            <h3 id="header"> Group's graph </h3>
            <script>
              var newHeader = document.getElementById("header");
              newHeader.innerHTML = "Project " + currentProject + " " + currentGroup
            </script>
              <div id="pie_chart"></div>
          </div>
        </div>
      </div>

      <script>
        var pieChartInfo = '<%- JSON.stringify(currentGroupChartInfo) %>';
      </script>
      <script src="/javascripts/graph_page.js"></script>
  </body>
</html>
